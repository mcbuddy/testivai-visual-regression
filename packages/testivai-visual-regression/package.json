{
  "name": "testivai-visual-regression",
  "version": "1.0.0",
  "description": "A TypeScript SDK for visual regression testing that integrates with multiple testing frameworks.",
  "main": "dist/index.js",
  "types": "dist/index.d.ts",
  "files": [
    "dist/**/*"
  ],
  "publishConfig": {
    "access": "public"
  },
  "scripts": {
    "build": "tsc",
    "test": "jest",
    "test:watch": "jest --watch",
    "test:coverage": "jest --coverage",
    "lint": "eslint 'src/**/*.ts'",
    "clean": "rimraf dist coverage",
    "prepublishOnly": "npm run clean && npm run build"
  },
  "keywords": [
    "visual-regression",
    "testing",
    "screenshot",
    "comparison",
    "playwright",
    "cypress",
    "puppeteer",
    "selenium"
  ],
  "author": "",
  "license": "MIT",
  "devDependencies": {
    "@types/jest": "^29.5.14",
    "@types/pixelmatch": "^5.2.6",
    "@types/pngjs": "^6.0.5",
    "@typescript-eslint/eslint-plugin": "^8.34.0",
    "@typescript-eslint/parser": "^8.34.0",
    "eslint": "^9.28.0",
    "jest": "^29.7.0",
    "rimraf": "^5.0.10",
    "ts-jest": "^29.3.4",
    "typescript": "^5.8.3"
  },
  "dependencies": {
    "glob": "^8.1.0",
    "pixelmatch": "^5.3.0",
    "sharp": "^0.34.2",
    "simple-git": "^3.28.0"
  }
}
