{
  "name": "testivai",
  "version": "1.0.17",
  "description": "CLI tool for testivAI Visual Regression testing",
  "main": "dist/index.js",
  "types": "dist/index.d.ts",
  "bin": {
    "testivai": "dist/cli.js"
  },
  "files": [
    "dist/**/*",
    "templates/**/*",
    "src/report-template/**/*"
  ],
  "publishConfig": {
    "access": "public"
  },
  "repository": {
    "type": "git",
    "url": "https://github.com/testivai/testivai-visual-regression.git"
  },
  "homepage": "https://github.com/testivai/testivai-visual-regression#readme",
  "bugs": {
    "url": "https://github.com/testivai/testivai-visual-regression/issues"
  },
  "scripts": {
    "build": "tsc",
    "test": "jest",
    "test:watch": "jest --watch",
    "test:coverage": "jest --coverage",
    "lint": "eslint 'src/**/*.ts'",
    "clean": "rimraf dist coverage",
    "prepublishOnly": "npm run clean && npm run build"
  },
  "keywords": [
    "visual-regression",
    "testing",
    "cli",
    "screenshot",
    "comparison",
    "playwright",
    "cypress",
    "puppeteer",
    "selenium"
  ],
  "author": "Budi Sugianto",
  "license": "MIT",
  "devDependencies": {
    "@types/jest": "^29.5.14",
    "@typescript-eslint/eslint-plugin": "^8.34.0",
    "@typescript-eslint/parser": "^8.34.0",
    "eslint": "^9.28.0",
    "jest": "^29.7.0",
    "rimraf": "^5.0.10",
    "ts-jest": "^29.3.4",
    "typescript": "^5.8.3"
  },
  "dependencies": {
    "chalk": "^4.1.2",
    "glob": "^10.3.10",
    "pixelmatch": "^5.3.0",
    "pngjs": "^7.0.0",
    "sharp": "^0.34.2"
  }
}
